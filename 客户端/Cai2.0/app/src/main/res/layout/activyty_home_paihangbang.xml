<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPalegreen">

            <ImageView
                android:id="@+id/myself_home_paihangbang_return"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/returnlogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="今日排行"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/home_paihangbang_1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color666"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/home_paihangbang_hongshaorou"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="红烧肉"
                    android:textSize="20sp"
                    android:textColor="@color/colorPalegreen"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红烧肉，是一道著名的大众菜肴，以五花肉为制作主料。做出来的肉肥瘦相间，入口即化。红烧肉在我国各地流传甚广，具有一定的营养价值。"
                    android:textSize="13sp"
                    android:textColor="@color/colorAmber"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorDarkGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/home_paihangbang_2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color666"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/home_paihangbang_xihongshichaojidan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="西红柿炒鸡蛋"
                    android:textSize="20sp"
                    android:textColor="@color/colorPalegreen"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="西红柿炒鸡蛋，是许多百姓家庭中一道普通的大众菜肴。烹饪方法简单易学。其营养价值丰富，具有营养素互补的特点以及健美抗衰老的作用。"
                    android:textSize="13sp"
                    android:textColor="@color/colorAmber"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorDarkGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/home_paihangbang_3"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color666"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/home_paihangbang_kelejichi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="可乐鸡翅"
                    android:textSize="20sp"
                    android:textColor="@color/colorPalegreen"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="可乐鸡翅，是一道以鸡翅和可乐为主料制作而成的美食。可乐鸡翅具有味道鲜美、色泽艳丽、鸡肉嫩滑、咸甜适中的特点。一般人群均可食用。"
                    android:textSize="13sp"
                    android:textColor="@color/colorAmber"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorDarkGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/home_paihangbang_4"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color666"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/home_paihangbang_hongshaopaigu"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="红烧排骨"
                    android:textColor="@color/colorPalegreen"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红烧排骨，是一道常见菜肴。以猪排骨杏鲍菇作为主要食材制作而成。此菜味道香咸，排骨酥烂，色泽金红。男女老少皆可食用。"
                    android:textSize="13sp"
                    android:textColor="@color/colorAmber"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorDarkGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/home_paihangbang_5"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color666"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/home_paihangbang_huiguorou"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="回锅肉"
                    android:textSize="20sp"
                    android:textColor="@color/colorPalegreen"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="回锅肉，是一种烹调猪肉的传统川菜。制作原料主要有猪肉、青椒等，口味独特，色泽红亮，入口浓香。它色香味俱全，颜色养眼，是下饭菜的首选。"
                    android:textSize="13sp"
                    android:textColor="@color/colorAmber"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorDarkGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/home_paihangbang_6"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color666"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/home_paihangbang_laziji"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="辣子鸡"
                    android:textSize="20sp"
                    android:textColor="@color/colorPalegreen"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="辣子鸡，是一道经典的传统名肴。一般以整鸡为主料精制而成，营养丰富，味道鲜美。此菜成菜色泽棕红油亮，麻辣味浓，咸鲜醇香，略带回甜。"
                    android:textSize="13sp"
                    android:textColor="@color/colorAmber"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorDarkGray"
            />

    </LinearLayout>

</ScrollView>