<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="我的"
            android:gravity="center"
            android:textColor="@color/colorBlank"
            />
        <ImageView
            android:src="@drawable/myself_xiaoxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_marginTop="2dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mhyself_touxiang"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlank"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorDarkGray"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/myself_qianbao"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="我的钱包"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlank"
        />
</LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkGray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorDarkGray"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/myself_shoucang"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的收藏"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorBlank"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkGray"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/myself_guo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的私房菜"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorBlank"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorDarkGray"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/myself_fankui"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户反馈"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorBlank"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkGray"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/myself_shezhi"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorBlank"
            />
    </LinearLayout>

</LinearLayout>